{
    "name": "check-package-version",
    "version": "2.0.0",
    "private": true,
    "description": "Release automatically with npm package version check action by PostHog",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint src/**/*",
        "lint:fix": "eslint --fix src/**/*",
        "package": "ncc build --source-map --license licenses.txt",
        "test": "jest",
        "all": "yarn build && yarn format && yarn lint && yarn package && yarn test",
        "prepare": "husky install"
    },
    "repository": "github:PostHog/check-package-version",
    "keywords": [
        "actions",
        "node",
        "setup",
        "npm",
        "package",
        "version",
        "release"
    ],
    "author": "PostHog <hey@posthog.com>",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.4.0",
        "package-json": "^7.0.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.5",
        "@typescript-eslint/parser": "^4.28.1",
        "@vercel/ncc": "^0.28.6",
        "eslint": "^7.29.0",
        "eslint-plugin-github": "^4.1.3",
        "eslint-plugin-jest": "^24.3.6",
        "husky": "^7.0.1",
        "jest": "^26.6.3",
        "jest-circus": "^27.0.6",
        "js-yaml": "^4.1.0",
        "lint-staged": "^11.0.0",
        "prettier": "2.3.2",
        "ts-jest": "^26.5.6",
        "typescript": "^4.3.4"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json,yml,yaml,toml,css,scss,html,xml,md}": "prettier --write",
        "*.{ts,tsx}": "tsc --noEmit"
    }
}
