{
    "name": "check-package-version",
    "version": "2.0.0",
    "private": true,
    "description": "Release automatically with npm package version check action by PostHog",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint src/**/*",
        "lint:fix": "eslint --fix src/**/*",
        "package": "ncc build --source-map --license licenses.txt",
        "test": "jest",
        "all": "yarn build && yarn format && yarn lint && yarn package && yarn test",
        "prepare": "husky install"
    },
    "repository": "github:PostHog/check-package-version",
    "keywords": [
        "actions",
        "node",
        "setup",
        "npm",
        "package",
        "version",
        "release"
    ],
    "author": "PostHog <hey@posthog.com>",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.2.6",
        "package-json": "^6.5.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.21",
        "@types/node": "^14.14.35",
        "@typescript-eslint/parser": "^4.19.0",
        "@vercel/ncc": "^0.27.0",
        "eslint": "^7.22.0",
        "eslint-plugin-github": "^4.1.2",
        "eslint-plugin-jest": "^24.3.2",
        "husky": "^5.1.3",
        "jest": "^26.6.3",
        "jest-circus": "^26.6.3",
        "js-yaml": "^4.0.0",
        "lint-staged": "^10.5.4",
        "prettier": "2.2.1",
        "ts-jest": "^26.5.4",
        "typescript": "^4.2.3"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx,json,yml,yaml,toml,css,scss,html,xml,md}": "prettier --write",
        "*.{ts,tsx}": "tsc --noEmit"
    }
}
